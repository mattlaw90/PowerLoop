<MudDialog>
    <DialogContent>
        @if (this.localLoopItem != null)
        {
            <MudGrid>
                <MudItem xs="4">
                    <MudNumericField @bind-Value="this.localLoopItem.Order"
                                     Label="Order" Variant="Variant.Outlined" Min="1"
                                     AdornmentIcon="@Icons.Material.Filled.Sort" Adornment="Adornment.Start"/>
                </MudItem>
                <MudItem xs="4">
                    <MudSelect @bind-Value="this.localLoopItem.Type" 
                               Label="Type" Variant="Variant.Outlined" Placeholder="Select Type">
                        @foreach (LoopItemType type in Enum.GetValues(typeof(LoopItemType)))
                        {
                            <MudSelectItem Value="@type">@type</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="4">
                    <MudNumericField @bind-Value="this.localLoopItem.Length"
                                     Label="Length (Seconds)" Variant="Variant.Outlined" Min="1"
                                     AdornmentIcon="@Icons.Material.Filled.Timer" Adornment="Adornment.Start" />
                </MudItem>
                <MudItem xs="12">
                    <MudToolBar Dense="true" DisableGutters="true">
                        <MudIconButton Icon="@Icons.Material.Filled.ImageSearch" OnClick="@this.OnSearch"
                                   Color="Color.Primary" Class="mr-2"
                                   Variant="Variant.Outlined" />
                        <MudTextField @bind-Value="this.localLoopItem.Path" Label="Path"
                                  Variant="Variant.Outlined" Placeholder="Path or Text Value">
                        </MudTextField>
                    </MudToolBar>
                </MudItem>
                <MudItem xs="4">
                    <MudNumericField T="int?" @bind-Value="this.localLoopItem.ZoomFactor"
                                 Label="Zoom (%)" Variant="Variant.Outlined"
                                 AdornmentIcon="@Icons.Material.Filled.ZoomOut" Adornment="Adornment.Start" />
                </MudItem>
                <MudItem xs="4">
                    <MudNumericField T="int?" @bind-Value="this.localLoopItem.PixelSkip"
                                 Label="Pixel Skip (Simulate Scroll on Web Content)" Variant="Variant.Outlined"
                                 AdornmentIcon="@Icons.Material.Filled.HideImage" Adornment="Adornment.Start" />
                </MudItem>
            </MudGrid>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

