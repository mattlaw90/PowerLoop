@inject IMainWindowViewModel mainWindowViewModel
@inject IPlayViewModel playViewModel

<ObservableRegion ViewModel="@this.playViewModel">
    @if (!this.playViewModel.IsPlaying)
    {
        <MudAppBar Color="Color.Dark">
            <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.PlayArrow" Color="Color.Success"
                   OnClick="@this.OnPlay">Play</MudButton>
            <MudSpacer/>
            <VersionDisplay />
        </MudAppBar>
    }
</ObservableRegion>

@code {
    private void OnPlay()
    {
        if (this.playViewModel.TryStart())
        {
            this.mainWindowViewModel.OnPlay();
        }
    }
}