<ObservableRegion ViewModel="@this.PlayViewModel">
    @if (this.PlayViewModel.IsPlaying)
    {
        @if (this.PlayViewModel.CurrentItem != null)
        {
            @if (this.PlayViewModel.CurrentItem.Type == LoopItemType.Image)
            {
                <img src="@this.PlayViewModel.CurrentItem.Path"/>
            }
            else if (this.PlayViewModel.CurrentItem.Type == LoopItemType.Web)
            {
                <iframe src=@this.PlayViewModel.CurrentItem.Path></iframe>
            }
        }
    }
</ObservableRegion>